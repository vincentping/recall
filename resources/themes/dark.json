{
  "name": "Dark",
  "name_key": "theme.dark",
  "description": "Dark theme for reduced eye strain in low-light environments",
  "description_key": "theme.dark_desc",
  "colors": {
    "primary": "#4A9EFF",
    "primary_hover": "#6BB3FF",
    "primary_pressed": "#2980E0",
    "secondary": "#2B2B2B",
    "background": "#1E1E1E",
    "surface": "#252525",
    "text": "#E0E0E0",
    "text_disabled": "#606060",
    "border": "#3F3F3F",
    "menu_bg": "#2B2B2B",
